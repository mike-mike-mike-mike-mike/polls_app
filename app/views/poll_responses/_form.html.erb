<%= simple_form_for([@poll, @poll_response]) do |f| %>
<%= f.error_notification %>
<%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

<div class="form-inputs">
  <p> Options are: </p>
  <%= @poll.options %>
  <%= f.input :answer, input_html: { class: 'form-control mb-3' }, label_html: { class: 'form-label' } %>
</div>

<div class="form-actions">
  <%= f.button :submit %>
</div>
<% end %>