<%= simple_form_for(@poll) do |f| %>
<%= f.error_notification %>
<%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

<div class="form-inputs">
  <%= f.input :title, input_html: { class: 'form-control mb-3' }, label_html: { class: 'form-label' }  %>
  <%= f.input :description, input_html: { class: 'form-control mb-3' }, label_html: { class: 'form-label' } %>
  <%= f.input :options,
    as: :string,
    input_html: { class: 'form-control mb-3' },
    label_html: { class: 'form-label' },
    value: @poll.options.join(','),
    label: "Answer Options (comma-separated)"
  %>
</div>

<div class="form-actions">
  <%= f.button :submit, class: 'btn btn-primary w-100' %>
</div>
<% end %>